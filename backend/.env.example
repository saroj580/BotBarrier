# ===========================================
# GuardFromBot Backend Environment Variables
# ===========================================
# Copy these variables to a .env file in the backend directory

NODE_ENV=development
PORT=

# Database Configuration
MONGO_URI=
MONGO_DB=

# JWT Authentication Secrets
# ⚠️  IMPORTANT: Change these in production!
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production-12345
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-67890

# JWT Token TTL (Time To Live) in seconds
ACCESS_TTL_SEC=
REFRESH_TTL_SEC=

# CORS Configuration
CORS_ORIGIN=
CORS_ALLOW_ALL=

# ML Service Configuration
ML_SERVICE_BASE= your ML_SERVICE_BASE

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=
RATE_LIMIT_MAX=
AUTH_RATE_LIMIT_MAX=
PAYMENT_RATE_LIMIT_MAX=

# Admin Configuration
ADMIN_EMAIL=

# Captcha Configuration (Optional - leave empty if not using)
RECAPTCHA_SECRET=
HCAPTCHA_SECRET=

# Geo API Configuration (Optional - leave empty if not using)
GEO_API_URL=

# Package Version (Auto-populated by npm)
npm_package_version=
